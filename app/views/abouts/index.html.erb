<%- model_class = About -%>
<div class="container">
  <div class="row">
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
    </div>
  </div><!--end row-->

  <div class="row">
    <% @abouts.each do |about| %>
        <div class="card border-0 rounded bg-light mb-2 mr-2" style="max-width: 35rem; height: auto;">
          <div class="card-header font-weight-bold"><h4><%= about.question %></h4></div>
          <div class="card-body"> 
            <div class="card-text"><%= about.answer %></div>
          </div>

          <div class ="card-footer">
            <% if can? :update, about %>
              <%= link_to 'Show', about %>
              <%= link_to 'Edit', edit_about_path(about) %>
              <%= link_to 'Destroy', about, method: :delete, data: { confirm: 'Are you sure?' } %>
              <%= link_to 'New About', new_about_path %>
            <%end%>
          </div>
        </div><!--end card-->
    <% end %>
  </div><!--end row-->
</div><!--end container-->