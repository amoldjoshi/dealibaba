<%- model_class = Item -%>

<div class="container">
  <!--<div class="page-header"><h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1></div>-->

  <div class="row mb-2">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div class="card border-primary bg-light mb-3" style="max-width: 18rem;">
          <div class="card-header">
            <%= link_to(item.itemname, url_with_protocol(item.itemurl),:target => :blank) %>
          </div>
          <div class="card-body">
            <picture><%= image_tag(item.image, class: 'fit-picture') %></picture>
            <div class="dropdown-divider"></div>
            <p class="card-text"><%= item.itemdescription %> </p>
          <div class="card-footer">
            <p><a class="card-text"><%=  link_to( item.itembutton , url_with_protocol(item.itemurl),:target => :blank, :class => 'btn btn-warning btn-sm')%></a>
            <a class="float-right"><font size="4" color = #0000FF><%= number_to_currency(item.itemprice, :unit => "@$")%></font></a>
            </p>
            <div>
              <% if can? :update, item %>
                <%= item.id %>
                <%= link_to 'Show', item %> ||
                <%= link_to 'Edit', edit_item_path(item) %> ||
                <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>||
                <%= link_to 'New product', new_item_path %>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
</div><!--finished container-->


