<%- model_class = Dealer -%>

<div class="container">
  <!--<div class="page-header"><h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>-->
    <div class="row mb-2">
      <% @dealers.each do |dealer| %>
        <% if dealer.dealertype == 3 %>
          <div class = "card-deck mr-1">
            <div class="card border-0 rounded bg-light mb-3" style="max-width: 16rem;">
              <div class="card-header">
                <h4><%= link_to(dealer.dealername, url_with_protocol(dealer.dealerurl),:target => :blank) %></h4>
              </div><!--end card header -->
              <div class="card-body"> 
                <picture><%= image_tag(dealer.logo, class: 'img-fluid') %></picture>
                <div class="dropdown-divider"></div>
                <p class="card-text"><%= dealer.dealercategory %> </p>
              </div><!--end card body -->
              <div class="card-footer">
                <p>
                  <a class="card-text"><%=  link_to('Lets Go!', url_with_protocol(dealer.dealerurl),:target => :blank, :class => 'btn btn-warning')%></a>
                </p>
              </div><!--end card footer -->
            </div><!--end card -->
            <div>
              <% if can? :update, dealer %>
                <%= link_to 'Show', dealer %> ||
                <%= link_to 'Edit', edit_dealer_path(dealer) %> ||
                <%= link_to 'Destroy', dealer, method: :delete, data: { confirm: 'Are you sure?' } %>||
                <%= link_to 'New dealer', new_dealer_path %>
              <%end%>
            </div><!--end if can -->
          </div><!--end card deck -->
        <% end %>
      <% end %>
    </div><!--end row-->
  </div><!--container-fluid-->