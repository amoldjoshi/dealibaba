<%- model_class = Dealer -%>

<div class="container-fluid">
  <div class="row mb-3">
    <% @dealers.each do |dealer| %>
      <% if dealer.dealertype == 2 %>
      <div class = "col-2 mt-1 mb-2">
        <div class = "logo-box">
          <picture><%= image_tag(dealer.logo, class: 'fit-image') %></picture>
          <ul>
            <li><h5 padding-top: 10%;><%= link_to dealer.dealername, url_with_protocol(dealer.dealerurl),:target => :blank %></h5></li>
            <div class="dropdown-divider"></div>
            <li><%=  link_to('Lets Go!', url_with_protocol(dealer.dealerurl),:target => :blank, :class => 'btn btn-warning')%></li>
            <% if can? :update, dealer %>
              <li><%= link_to 'Show', dealer %>||
                <%= link_to 'Edit', edit_dealer_path(dealer) %>||
                <%= link_to 'Destroy', dealer, method: :delete, data: { confirm: 'Are you sure?' } %>||
                <%= link_to 'New Weekly Add', new_dealer_path %>
              </li>
            <%end%>
          </ul>
        </div><!--end div logobox. -->
      </div><!--end div col-md-2 -->
      <% end %>
    <% end %>
  </div>
</div><!--container-fluid-->