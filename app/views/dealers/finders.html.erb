<%- model_class = Dealer -%>

<div class ="container-fluid">
<div class="page-header">
  <h1>Sites that finds deals</h1>
</div>


<div class ="container">
  <div class ="row">
    <div class ="span4">
      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th><h4>Name of Site</h4></th>
            <th><h4>Site Type</h4></th>
            <th><h4>Links</h4></th>
          </tr>
        </thead>
      <tbody>
        <% @dealers.each do |dealer| %>
          <% if dealer.dealertype == 2 %>  
            <tr>
              <td><h5><%= link_to(dealer.dealername, url_with_protocol(dealer.dealerurl),:target => :blank) %></h5></td>
              <td><h5><%= dealer.dealercategory %></h5></td>
              <td><%=  link_to('Lets Go!', url_with_protocol(dealer.dealerurl),:target => :blank, :class => 'btn btn-success')%></td>
              <td><h5>
                <% if can? :update, dealer %>
                  <%= link_to 'Show', dealer %> ||
                  <%= link_to 'Edit', edit_dealer_path(dealer) %> ||
                  <%= link_to 'Destroy', dealer, method: :delete, data: { confirm: 'Are you sure?' } %>||
                  <%= link_to 'New dealer', new_dealer_path %>
                <%end%></h5>
              </td>
            </div>
            </tr>
          <% end %>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
</div>