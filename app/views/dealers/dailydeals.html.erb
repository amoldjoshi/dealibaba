<p id="notice"><%= notice %></p>

<h1>Dealers</h1>

<table>
  <thead>
    <tr>
      <th>Dealerid</th>
      <th>Dealername</th>
      <th>Dealerurl</th>
      <th>Dealertype</th>
      <th>Dealerlogo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dealers.each do |dealer| %>
      <% if dealer.dealertype == 1 %>
      <tr>
        <td><%= dealer.dealerid %></td>
        <td><%= dealer.dealername %></td>
        <td><%= dealer.dealerurl %></td>
        <td><%= dealer.dealertype %></td>
        <td><%= image_tag dealer.logo %></td>
        <td><%= link_to 'Show', dealer %></td>
        <td><%= link_to 'Edit', edit_dealer_path(dealer) %></td>
        <td><%= link_to 'Destroy', dealer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

