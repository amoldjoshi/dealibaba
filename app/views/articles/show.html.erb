<p id="notice"><%= notice %></p>

<div class="container">
<div class="row justify-content-center">
<div class = "col-md-9">
  <div class="card rounded ml-2 mb-3">
    <div class="card-header text-center">
        <p class="h4 text-center font-weight-bold mb-2"><%= @article.title %></p>
        <p class="h6 font-italic"><%= @article.writer %>
        <%= @article.created_at.strftime("%b, %Y") %></p>
    </div>
      <div class="card-body">
        <div class="card-text text-justify mb-2"><%= @article.heading %></div>
      </div>
    </div><!--end <div class="card ml-2 mb-3"> -->
 
  <div class="articledetail-box">

    <p class="h6 font-weight-bold text-monospace ml-2 mb-2">Following are the factors discussed in this article.</p>
    <% @article.articledetails.each do |articledetail| %>
      <ul>
        <li class="h6 font-weight-bold text-monospace ml-2 mb-2"><%= articledetail.title %></li>
      </ul>
    <% end %>
  </div>

  <div class="card rounded ml-2 mb-3">
  <% @article.articledetails.each do |articledetail| %>
    <div class="row no-gutters">
      <div class="card-body">
        <p class="h5 font-weight-bold text-monospace mb-2"><%= articledetail.title %></p>
        <div class="card-text text-justify"><%= articledetail.content %></div>
      </div>     
    </div>
  <% end %>
  </div> <!--end <div class="card rounded ml-2 mb-3"> -->
 

  <% @article.items.each do |item| %>
  <div class="card rounded ml-2 mb-3">
  	<div class="row no-gutters">
  		<div class="col-md-3">
        <picture><%= image_tag(item.image, class: 'fit-picture') %></picture>
  		</div>
  		<div class="col-md-8">
  			<div class="card-body">
  				<div class="card-text">
						<%= item.itemname %>
						<%= item.itemdescription %>
              <%=  link_to( 'Product Link' , url_with_protocol(item.itemurl),:target => :blank, :class => 'btn btn-primary btn-sm')%>
              <a class="float-right"><font size="4" color = #0000FF><%= number_to_currency(item.itemprice, :unit => "@$")%></font></a>		
					</div>
  			</div>	
			</div>
		</div>
  </div>	
	<% end %>

  <div class="card rounded ml-2 mb-3">
    <div class="card-body">
      <div class="card-text text-justify mb-2"><%= @article.conclusion %></div>
      <div class="dropdown-divider"></div>
    </div>
   	<div>
   		<% if can? :update, @article %>
     	<%= link_to 'Edit', edit_article_path(@article) %>
     	<%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= link_to 'New About', new_article_path %>
      <%end%>
      <div><%= link_to 'Back', articles_path %></div>
    </div>
  </div><!----end card-->
</div><!--col-md-10-->
</div><!--row-->
</div><!--container-->