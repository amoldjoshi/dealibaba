<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="newform-box">
    <div class = "container">
      <div class="form-inputs">
        <%= f.input :productid %>
        <%= f.input :productname %>
        <%= f.input :producturl %>
        <%= f.input :producttype %>
        <%= f.input :productdescription %>
        <%= f.input :productresearch %>
        <%= f.input :productprice %>
        <%= f.input :productbutton %>
        <%= f.input :picture %>
      </div>
    </div><!--end container-->
    <div class="form-actions"><%= f.button :submit %></div>
  </div><!--end newform-box input-->

<% end %>
